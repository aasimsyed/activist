{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["@types/node", "playwright"],
    "paths": {
      "~": ["./app"],
      "~/*": ["./app/*", "./*"],
      "~~": ["."],
      "~~/*": ["./*"]
    }
  },
  "include": ["playwright.config.mts", "test-e2e/**/*.ts", "test-e2e/**/*.mts"]
}
